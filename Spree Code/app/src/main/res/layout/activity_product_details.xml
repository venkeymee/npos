<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Activities.Inventory.ProductDetailsActivity">

    <include layout="@layout/include_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#f7f7f7"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:id="@+id/txt_gtin_title"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Product Details"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/grey_300"
        android:layout_height="1dp"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:text="Whats the product Name"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorAccentLight"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/et_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:inputType="text"
                        android:maxLines="1"
                        android:hint="Enter product Name"
                        android:singleLine="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/grey_500"
                    android:layout_height="1dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:text="Whats the Product Price"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorAccentLight"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/et_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:inputType="number"
                        android:maxLines="1"
                        android:hint="Enter Product Price"
                        android:singleLine="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/grey_500"
                    android:layout_height="1dp"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:text="Whats the Product Buying Price"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorAccentLight"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/et_product_buying_price"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:inputType="number"
                        android:maxLines="1"
                        android:hint="Enter Product Buying Price"
                        android:singleLine="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/grey_500"
                    android:layout_height="1dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:text="How many items are you receiving?"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorAccentLight"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/et_product_units"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:inputType="number"
                        android:maxLines="1"
                        android:hint="Enter number of items received"
                        android:singleLine="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/grey_500"
                    android:layout_height="1dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:text="Whats the product SKU"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorAccentLight"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/et_product_gtin"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:inputType="number"
                        android:maxLines="1"
                        android:hint="Enter product SKU"
                        android:singleLine="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/grey_500"
                    android:layout_height="1dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:text="Product Vat value"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorAccentLight"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_height="wrap_content" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/card_bg_edit_text_cube"
                    android:layout_height="45dp">

                    <EditText
                        android:id="@+id/et_product_vat"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:inputType="number"
                        android:maxLines="1"
                        android:focusable="false"
                        android:hint="Product vat"
                        android:singleLine="true" />

                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

