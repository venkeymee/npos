<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Reports.ReportsActivity">

    <include layout="@layout/include_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="7 Days Sales Report"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <view
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            class="im.dacer.androidcharts.BarView"
                            android:id="@+id/bar_sales" />
                    </HorizontalScrollView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="7 Days Purchase Report"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <view
                            android:layout_width="wrap_content"
                            android:layout_height="300dp"
                            class="im.dacer.androidcharts.BarView"
                            android:id="@+id/bar_purchase" />
                    </HorizontalScrollView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="7 Days Expense Report"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <view
                            android:layout_width="wrap_content"
                            android:layout_height="300dp"
                            class="im.dacer.androidcharts.BarView"
                            android:id="@+id/bar_expense" />
                    </HorizontalScrollView>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>